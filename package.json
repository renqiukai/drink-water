{
  "name": "drink-water",
  "version": "0.1.0",
  "description": "Minimal drink water reminder app",
  "main": "main.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "start": "electron .",
    "dev": "electronmon .",
    "distw": "electron-builder --win",
    "dist": "electron-builder --mac"
  },
  "devDependencies": {
    "electron": "^30.0.0",
    "electron-builder": "^24.13.3",
    "electronmon": "^2.0.4"
  },
  "build": {
    "appId": "com.drinkwater.app",
    "productName": "DrinkWater",
    "files": [
      "main.js",
      "preload.js",
      "renderer/**/*",
      "water.png",
      "package.json"
    ],
    "directories": {
      "output": "dist"
    },
    "mac": {
      "target": [
        "dmg",
        "zip"
      ],
      "icon": "water.png"
    }
  }
}
